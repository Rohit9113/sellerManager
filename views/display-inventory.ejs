<!-- views/display-inventory.ejs -->

<!DOCTYPE html>
<html>
<head>
  <title>Display Inventory</title>
  <!-- Include Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    /* Custom styles for the layout */
    .container {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
    }

    .card {
      width: 200px;
      margin: 20px;
    }

    .card-img-top {
      width: 200px;
      height: 250px;
      object-fit: cover;
    }

    .card-body {
      text-align: center;
    }

    /* Custom styles for search bar */
    .search-container {
      display: flex;
      justify-content: center;
      margin-top: 5%;
    }

    .search-container input[type="text"] {
      padding: 5px;
    }

    .search-container button {
      padding: 5px 10px;
      margin-left: 10px;
    }

    /* Custom styles for URL display */
    .url-container {
      margin-top: 20px;
      text-align: center;
    }

    .url-container input[type="text"] {
      width: 400px;
      padding: 5px;
    }

    .url-container button {
      padding: 5px 10px;
    }
  </style>
</head>
<body>
  <div class="url-container">
    <p>Share this URL: <input type="text" id="url-input" value="<%= url %>" readonly></p>
    <!-- <input type="text" id="url-input" value="<%= url %>">
    <button onclick="copyUrl()">Copy URL</button> -->
  </div>

  <div class="search-container">
    <form action="/dashboard/inventory/display" method="GET">
      <input type="text" name="search" placeholder="Search products">
      <button type="submit" class="btn btn-primary">Search</button>
    </form>
  </div>
  <div>
    <p><%- %></p>
  </div>

  <div class="container">
    <% inventories.forEach(inventory => { %>
      <div class="card">
        <%= inventory.images%>
        <img src="../public/images/p1.jpg" class="card-img-top" alt="Product Image">
        <div class="card-body">
          <h5 class="card-title"><%= inventory.productName %></h5>
          <p class="card-text">MRP: <%= inventory.mrp %></p>
          <p class="card-text">SP: <%= inventory.sp %></p>
          <p class="card-text">Category: <%= inventory.category %></p>
        </div>
      </div>
    <% }) %>
  </div>

  <!-- Include Bootstrap JS and Popper.js (required for Bootstrap) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function copyUrl() {
      const urlInput = document.getElementById('url-input');
      urlInput.select();
      urlInput.setSelectionRange(0, 99999); /* For mobile devices */
      document.execCommand('copy');
      alert('URL copied to clipboard!');
    }
  </script>
</body>
</html>
