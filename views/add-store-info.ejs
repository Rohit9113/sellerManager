<!DOCTYPE html>
<html>
<head>
  <title>Add Store Info</title>
  <!-- Include Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    /* Custom styles for the layout */
    .container {
      display: flex;
      height: 100vh;
      margin-right: 0;
      margin-left: 0;
    }

    .sidebar {
      flex-basis: 30%;
      background-color: #000000;
      padding: 70px;
      margin-right: 0;
    }

    .content {
      flex-basis: 70%;
      padding: 20px;
    }

    .content h2 {
      margin-top: 0;
    }
  </style>
</head>
<body>
  <div class="container">
    <!-- Content -->
    <div class="content">
      <h1>Add Store Info</h1>
      <!-- Add form to collect store info -->
      <form action="/dashboard/store-info" method="POST">
        <!-- Store info fields -->
        <div class="mb-3">
          <label for="address" class="form-label">Address:</label>
          <input type="text" class="form-control" id="address" name="address" required>
        </div>

        <div class="mb-3">
          <label for="gst" class="form-label">GST:</label>
          <input type="text" class="form-control" id="gst" name="gst" required>
        </div>

        <div class="mb-3">
          <label for="logo" class="form-label">Logo:</label>
          <input type="file" class="form-control" id="logo" name="logo" required>
        </div>

        <div class="mb-3">
          <label for="storeTimings" class="form-label">Store Opening:</label>
          <input type="date" class="form-control" id="storeTimings" name="storeTimings" required>
        </div>       

        <button type="submit" class="btn btn-primary">Save</button>
      </form>
    </div>
  </div>

  <!-- Include Bootstrap JS and Popper.js (required for Bootstrap) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
